<!doctype html>
<html>
<head>
    <title>Authentication Project</title>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">
    <link rel="stylesheet" href="signup.css">
</head>
<header>
  <section class="leftHeader">
    <h1>Learn 2 Code!</h1>
  </section>
  <section class="rightHeader">
    <form action="/login" method="post">
        <div class="login">
            <label>Email</label>
            <input type="text" class="form-control" name="email">
        </div>
        <div class="login">
            <label>Password</label>
            <input type="password" class="form-control" name="password">
        </div>
        <button type="submit" class="btn btn-warning btn-lg">Login</button>
    </form>
  </section>
</header>
<body>
<div class="container">
<div class="col-sm-6 col-sm-offset-3">
    <h1><span class="fa fa-sign-in"></span> Sign Up</h1>
    <h3>Join the community and learn 2 code!</h3>
      <form action="/signup" method="post">
          <div class="form-group">
              <label>E-mail</label>
              <input type="text" class="form-control" name="email">
          </div>
          <div class="form-group">
              <label>Password</label>
              <input type="password" class="form-control" name="password">
          </div>
          <button type="submit" class="btn btn-warning btn-lg">Sign Up</button>
      </form>
    <% if (message.length > 0) { %>
        <div class="alert alert-danger"><%= message %></div>
    <% } %>
</div>
</div>
</body>
</html>
